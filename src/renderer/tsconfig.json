{
    "compilerOptions": {
      "target": "esnext",
      "outDir": "./dist", // Specify a different output directory
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "lib": ["esnext", "dom"],
      "types": ["vite/client"]
    },
    "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"],
  }
  
